    </ParameterDefinition>
    <ParameterDefinition id="parameters.wordpressBlogName" valueType="STRING" mandatory="false" configurable="true" default="OSCM">
      <LocalizedDescription locale="en">Blog name</LocalizedDescription>
    </ParameterDefinition>
